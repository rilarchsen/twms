@model IEnumerable<TimeWorkedManagementSystem.Models.Shift>

<p>
    <a asp-controller="Shifts" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breaks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Breaks.Count)
                </td>
                <td>
                    <a asp-controller="Companies" asp-action="Details" asp-route-id="@item.CompanyId">@item.Company.Name</a>
                </td>
                <td>
                    <a asp-controller="Shifts" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Shifts" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Shifts" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>